<div class="flash">
  <% flash.each do |message_type, message| %>
    <% if message_type != "timedout" %>
      <div class="alert-<%= message_type %>">
        <div class="alert">
          <div class="padding-vertical">
            <%= message %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>