<div class="container">

  <div class="medium-title center padding-vertical-large">
    Edit your profile
  </div>

  <div class="form-container form-border">
    <%= form_for(@profile, url: user_profile_path(@user)) do |f| %>
      <span id="profile_errors"><%= render 'partials/errors/profile_errors' %></span>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "text-field" %>
      </div>

      <div class="field padding-top">
        <%= f.label :age %>
        <%= f.text_field :age, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :country %>
        <%= f.text_field :country, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :website %>
        <%= f.text_field :website, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :biography %>
        <%= f.text_area :biography, class: "text-area" %>
      </div>

      <%= f.submit "Update profile", data: { disable_with: 'Updating...' }, class: "submit-button" %>
    <% end %>
  </div>

</div>
