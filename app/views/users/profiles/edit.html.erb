<div class="container">

  <div class="medium-title center padding-vertical-large">
    Edit your profile
  </div>

  <div class="form-container form-border">
    <%= form_for(@profile, url: user_profile_path(@user)) do |f| %>
      <span id="profile_errors"><%= render 'partials/errors/profile_errors' %></span>

      <div class="field">
        <%= f.label :display_name %>
        <%= f.text_field :display_name, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "text-field" %>
      </div>

      <% if @profile.image_data? %>
        <div class="field">
          <img class="profile-thumbnail-image" src="<%= @user.profile.image_url(:thumb) %>">
        </div>
        <div class="flex">
          <div class="field-two-column center">
            <label class="image-button" for="profile-image">Upload a profile image</label>
            <%= f.hidden_field :image, value: @profile.cached_image_data %>
            <span class="hidden"><%= f.file_field :image, id: "profile-image", class: "profile_image" %></span>
            <div class="file-name-image"></div>
          </div>
          <div class="field-two-column center">
            <label class="inactive-removal-tab" id="remove-image-tab" for="remove-image-inactive">Remove image</label>
            <span class="hidden"><%= f.check_box :remove_image, id: "remove-image-inactive" %></span>
          </div>
        </div>
      <% else %>
        <div class="field">
          <%= f.label :image, "Upload a profile picture" %>
          <label class="image-button" for="profile-image">Upload a profile image</label>
          <%= f.hidden_field :image, value: @profile.cached_image_data %>
          <span class="hidden"><%= f.file_field :image, id: "profile-image", class: "profile_image" %></span>
          <div class="file-name-image"></div>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :age %>
        <%= f.text_field :age, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :country %>
        <%= f.text_field :country, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :website %>
        <%= f.text_field :website, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :biography %>
        <%= f.text_area :biography, class: "text-area" %>
      </div>

      <%= f.submit "Update profile", data: { disable_with: 'Updating...' }, class: "submit-button" %>
    <% end %>
  </div>

</div>
