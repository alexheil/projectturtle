<div class="container">

  <div class="medium-title center padding-vertical-large">
    Register
  </div>

  <div class="form-container form-border">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autocomplete: "username", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password %> <span class="darkgrey mini-text"><%= @minimum_password_length.to_s + " characters minimum" if @minimum_password_length %></span>
        <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
      </div>

      <%= f.submit "Sign up! =)", data: { disable_with: 'Registering...' }, class: "submit-button" %>
    <% end %>
  </div>

  <div class="padding-top center">
    <%= link_to "But I already have an account.", sign_in_path %>
  </div>

</div>