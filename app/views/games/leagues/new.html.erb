<%= form_for(@league, url: game_playlist_leagues_path) do |f| %>
  <%= render 'partials/errors/playlist_errors' %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "text-field" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image, class: "text-field" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "text-field" %>
  </div>

  <%= f.submit "Create league", data: { disable_with: 'Creating...' }, class: "submit-button" %>
<% end %>